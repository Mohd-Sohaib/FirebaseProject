<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EFD562"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgFindStudent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_margin="30dp"
        android:src="@drawable/ic_baseline_find_in_page_24"
       />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="85dp"
        android:ems="10"
        android:textColorHint="@color/black"
        android:hint="@string/Student_Name"
        android:inputType="text"
        app:layout_constraintVertical_bias="0.189" />

    <EditText
        android:id="@+id/edtAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:layout_marginStart="85dp"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:hint="@string/Student_Age"
        app:layout_constraintVertical_bias="0.189" />

    <EditText
        android:id="@+id/edtRollNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:layout_marginStart="85dp"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:hint="@string/Roll_No"
        app:layout_constraintVertical_bias="0.189" />

    <EditText
        android:id="@+id/edtCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:textColorHint="@color/black"
        android:layout_marginStart="85dp"
        android:inputType="text"
        android:hint="@string/Course"
        app:layout_constraintVertical_bias="0.189" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Submit_btn"
        android:layout_marginTop="40dp"
        android:layout_marginStart="150dp"
        app:layout_constraintVertical_bias="0.111" />
</LinearLayout>